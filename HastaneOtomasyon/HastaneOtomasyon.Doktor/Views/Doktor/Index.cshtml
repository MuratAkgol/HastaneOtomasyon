@{
}
@using EntityLayer
@model List<RandevuViewModel>
<div class="container">
    <div class="row">
        <div class="col-md col-sm">
            @foreach (var item in Model)
            {
                <h2>
                    Hoş Geldin
                    @item.DoktorAdiSoyadi
                </h2>
            }
        </div>
        <hr />
        <div class="row">
            <div class="col-md col-sm">
              <h3>Randevularınız:</h3>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Randevu ID</th>
                            <th>Saat</th>
                            <th>Hasta Adı Soyadı</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var randevu in Model)
                        {
                            <tr>
                                <td>@randevu.RandevuId</td>
                                <td>@randevu.Saat</td>
                                <td>@randevu.HastaAdiSoyadi</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>