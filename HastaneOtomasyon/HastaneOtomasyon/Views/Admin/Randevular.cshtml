@{
}
@using EntityLayer
@model List<RandevuViewModel>


<div class="container">
    <div class="row">
        <div class="col-md col-sm">

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Randevu ID</th>
                        <th>Saat</th>
                        <th>Hasta Adı Soyadı</th>
                        <th>Doktor Adı Soyadı</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var randevu in Model)
                    {
                        <tr>
                            <td>@randevu.RandevuId</td>
                            <td>@randevu.Saat</td>
                            <td>@randevu.HastaAdiSoyadi</td>
                            <td>@randevu.DoktorAdiSoyadi</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

