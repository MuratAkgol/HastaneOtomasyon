@{
}
@using EntityLayer
@model List<Saatler>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-sm">

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Saat</th>
                        <th scope="col">İşlem</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.RandevuSaati</td>
                            <td><a class="btn btn-danger" href="/Home/SaatSil/@item.Id">Sil</a></td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
    <div class="row mt-3">
        <form asp-action="SaatKaydet" asp-controller="Home" method="post">
            <div class="col-md-4 col-sm">
                <b>Yeni Randevu Saati ekle</b>
                <input type="text" name="RandevuSaati" maxlength="5" required class="form-control" />
                
                <input type="submit" class="btn btn-success mt-2" value="Kaydet" />
            </div>
        </form>
    </div>
</div>